{
    "name": "wenow/clock",
    "description": "Clock abstraction library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien MERCIER-ROJAS",
            "email": "julien@jeckel-lab.fr"
        },
        {
            "name": "Piotr GRZEGORZEWSKI",
            "email": "piotr.grzegorzewski@wenow.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "JeckelLab\\Clock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\JeckelLab\\Clock\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3",
        "jeckel-lab/contract": ">=1.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^10.5 || ^11.2",
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.7",
        "mikey179/vfsstream": "^1.6",
        "vimeo/psalm": "^4 || ^5.25",
        "phpro/grumphp": "^0.19 || ^1.16",
        "codeception/codeception": "^5.0 || ^5.1"
    },
    "suggest": {
        "codeception/codeception": "Use helper to handle clock with your codeception tests"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
